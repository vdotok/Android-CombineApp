<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/timerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tile_green_dark"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/manrope_bold_700"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/active_session_message"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/callTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/manrope_bold_700"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/notificationCallView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tile_green_dark"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/timerLayout">

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>