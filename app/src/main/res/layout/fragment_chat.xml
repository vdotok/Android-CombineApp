<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature.chat.fragment.ChatFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="groupTitle"
            type="androidx.databinding.ObservableField&lt;String&gt;" />

        <variable
            name="typingUserName"
            type="androidx.databinding.ObservableField&lt;String&gt;" />

        <variable
            name="showTypingText"
            type="androidx.databinding.ObservableBoolean" />

        <variable
            name="messageText"
            type="androidx.databinding.ObservableField&lt;String&gt;" />

        <variable
            name="disableButton"
            type="androidx.databinding.ObservableBoolean" />

        <variable
            name="isActiveSession"
            type="androidx.databinding.ObservableBoolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/off_white">

        <include
            android:id="@+id/customToolbar"
            layout="@layout/custom_chat_toolbar"
            bind:groupTitle="@{groupTitle}"
            bind:isActiveSession="@{isActiveSession}"
            bind:showTypingText="@{showTypingText}"
            bind:typingUserName="@{typingUserName}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_msg_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintBottom_toTopOf="@+id/customBottombar"
            bind:layout_constraintTop_toBottomOf="@+id/customToolbar"
            tools:itemCount="5" />

        <include
            android:id="@+id/customBottombar"
            layout="@layout/custom_chat_bottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            bind:disableButton="@{disableButton}"
            bind:messageText="@{messageText}" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>