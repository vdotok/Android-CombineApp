<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VdoTok" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="YellowTheme" parent="Theme.VdoTok">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/theme_gradient</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:background">@drawable/theme_gradient</item>
    </style>

    <style name="Theme_TextView_Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="android:fontFamily">@font/manrope_medium_500</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme_TextView_Incoming_Call" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:fontFamily">@font/manrope_bold_700</item>
        <item name="android:lineHeight" tools:targetApi="p">28sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme_Accounts_EditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/tile_green_dark</item>
        <item name="android:textColorHint">@color/tile_green_light</item>
        <item name="android:fontFamily">@font/manrope_medium_500</item>
        <item name="android:textSize">16sp</item>
        <item name="singleLine">true</item>
        <item name="android:lineHeight" tools:targetApi="p">18sp</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="android:background">@drawable/shadowed_edit_text</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Theme_Button_Activated" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">18sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/manrope_bold_700</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/accounts_button_state</item>
    </style>

    <style name="Theme_Button_Transparent" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/dark_indigo</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">18sp</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="fontFamily">@font/manrope_bold_700</item>
        <item name="android:padding">15dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Toolbar_Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/tile_green_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme_Text_message" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tile_green_dark</item>
        <item name="android:fontFamily">@font/inter_regular_400</item>
    </style>


    <style name="Dialog_TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grayish_3</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/manrope_medium_500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Toolbar_Message_Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_blackish_green</item>
        <item name="android:textColorHint">@color/opal</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_medium_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLength">400</item>
        <item name="android:maxLines">4</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Theme_search_view" parent="TextAppearance.AppCompat">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_search_edit_text</item>
        <item name="android:drawableStart">@drawable/ic_search_icon</item>
        <item name="android:textColor">@color/dark_indigo_2</item>
        <item name="android:textColorHint">@color/tile_green_2</item>
    </style>

    <style name="Theme_TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/manrope_medium_500</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LoadingStyleTransparent" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="DialogSpotColor">@color/theme_color</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="Theme_Toolbar_Chat" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/sea_blue</item>
        <item name="android:fontFamily">@font/inter_regular_400</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineHeight" tools:targetApi="p">18sp</item>
    </style>

    <style name="Theme_UnRead_Messages" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_indigo</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/inter_regular_400</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Theme_TextView_Group_Menu" parent="TextAppearance.AppCompat">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lineHeight" tools:targetApi="p">18sp</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_states_drawable</item>
        <item name="android:backgroundTint">@color/light_white</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/grayish_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.VdoTok.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VdoTok.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VdoTok.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>